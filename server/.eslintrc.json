{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "no-console": ["warn", {"allow": ["warn", "error"]}],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "multi-line"],
    "consistent-return": "error"
  }
}
