# ═══════════════════════════════════════════════════════════════════════════
# Application Configuration
# ═══════════════════════════════════════════════════════════════════════════
NODE_ENV=production
BACKEND_PORT=5000
FRONTEND_PORT=3000

# ═══════════════════════════════════════════════════════════════════════════
# CORS & Client Configuration
# ═══════════════════════════════════════════════════════════════════════════
CORS_ORIGIN=http://localhost:3000
CLIENT_URL=http://localhost:3000
VITE_API_URL=http://localhost:5000

# ═══════════════════════════════════════════════════════════════════════════
# Redis Configuration
# ═══════════════════════════════════════════════════════════════════════════
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password

# ═══════════════════════════════════════════════════════════════════════════
# MinIO Configuration (Optional)
# ═══════════════════════════════════════════════════════════════════════════
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=minio
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# ═══════════════════════════════════════════════════════════════════════════
# Storage Configuration
# ═══════════════════════════════════════════════════════════════════════════
STORAGE_TYPE=gridfs
GOOGLE_DRIVE_FOLDER_ID=

# ═══════════════════════════════════════════════════════════════════════════
# ⚠️  SENSITIVE CREDENTIALS - OVERRIDE IN .env.secret
# ═══════════════════════════════════════════════════════════════════════════
# These are PLACEHOLDER values. Real credentials MUST be in .env.secret
# which is NOT committed to version control.

# Database (OVERRIDE IN .env.secret)
MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/db?retryWrites=true&w=majority

# Security Keys (OVERRIDE IN .env.secret)
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Email (OVERRIDE IN .env.secret)
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_app_password

# Google Cloud Platform (OVERRIDE IN .env.secret)
GCP_PROJECT_ID=your_gcp_project
GCS_BUCKET_NAME=your_bucket_name
GCS_KEY_FILE=/app/config/gcs-key.json
GOOGLE_DRIVE_CREDENTIALS_PATH=/app/config/gcs-key.json

# AI Services (OVERRIDE IN .env.secret)
GEMINI_API_KEY=your_gemini_api_key
